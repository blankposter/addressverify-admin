    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "ts-node -r tsconfig-paths/register src/commands/seed.command.ts seed",
    "seed:clear": "ts-node -r tsconfig-paths/register src/commands/seed.command.ts clear",
    "seed:refresh": "ts-node -r tsconfig-paths/register src/commands/seed.command.ts refresh",
    "frontend:dev": "vite",
    "frontend:build": "vite build",
    "frontend:preview": "vite preview",
    "dev:full": "concurrently \"npm run start:dev\" \"npm run frontend:dev\"",
    "build:full": "npm run build && npm run frontend:build"
